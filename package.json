{
  "name": "WayFarer",
  "version": "1.0.0",
  "description": "WayFarer is a public bus transportation booking server.",
  "main": "src/app.js",
  "scripts": {
    "test": "nyc --reporter=html --reporter=text cross-env NODE_ENV=test mocha --require @babel/register --recursive ./src/test --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "babel src --out-dir dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "heroku-postbuild": "npm run clean && npm run build",
    "start": "node dist/app.js",
    "start:dev": "nodemon --exec babel-node src/app.js"
  },
  "keywords": [],
  "author": "Oladehinde Kazeem",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2"
  }
}
